{
  "manifest_version": 3,
  "name": "caption assistant",
  "description": "caption assistant",
  "version": "1.0",
  "options_ui": {
    "page": "options.html"
  },
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "matches": [
        "https://www.netflix.com/*"
      ],
      "resources": [
        "js/netflix_accessible_script.js"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.netflix.com/watch/*"
      ],
      "js": [
        "js/vendor.js",
        "js/content_script.js"
      ]
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": [
    "storage"
  ]
}